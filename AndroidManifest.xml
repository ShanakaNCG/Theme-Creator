<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shana.android.themeCreater"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/jellybean"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.shana.android.themeCreater.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shana.android.themeCreater.ThemeSelecter"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.shana.android.themeCreater.THEMESELECTER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shana.android.themeCreater.ChangeColor"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.shana.android.themeCreater.CHANGECOLOR" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shana.android.themeCreater.CustomTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.shana.android.themeCreater.CUSTOMTHEME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>